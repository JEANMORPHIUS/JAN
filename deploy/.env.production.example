# JAN Studio - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================
# SECURITY
# ============================================

# JWT Secret Key (REQUIRED - must be at least 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters-long-CHANGE-THIS

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# DATABASE
# ============================================

# SQLite (default)
DATABASE_PATH=/app/data/jan_studio.db

# Or PostgreSQL (if using)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================
# API KEYS (Optional - only if using AI features)
# ============================================

# OpenAI API Key
OPENAI_API_KEY=

# Anthropic API Key
ANTHROPIC_API_KEY=

# Google API Key
GOOGLE_API_KEY=

# ============================================
# GUNICORN CONFIGURATION
# ============================================

# Number of workers (default: CPU * 2 + 1)
GUNICORN_WORKERS=4

# Worker timeout (seconds)
GUNICORN_TIMEOUT=120

# Worker keepalive (seconds)
GUNICORN_KEEPALIVE=5

# Max requests per worker (prevent memory leaks)
GUNICORN_MAX_REQUESTS=1000

# ============================================
# MONITORING
# ============================================

# Prometheus enabled
PROMETHEUS_ENABLED=true

# Grafana enabled
GRAFANA_ENABLED=true

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# APPLICATION
# ============================================

# Environment
ENVIRONMENT=production

# Debug mode (MUST be false in production)
DEBUG=false

# Log level
LOG_LEVEL=info

# ============================================
# SSL/HTTPS (if terminating at Nginx)
# ============================================

# SSL certificate path (in container)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# ORACLE SYSTEM
# ============================================

# Oracle database paths (auto-created if not exists)
ORACLE_SESSIONS_DB=/app/data/oracle_sessions.db
GAME_OF_RACON_DB=/app/data/game_of_racon_spiritual.db
ORACLE_GATEWAY_DB=/app/data/oracle_gateway.db
ORACLE_CORE_DB=/app/data/oracle_core.db
